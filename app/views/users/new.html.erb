<h3>Create A Happy You!</h3>


<%= form_with model: @user do |form| %>
  <p><%= form.text_field :username, placeholder: "Username" %></p>
  <p><%= form.password_field :password , placeholder: "Password"%></p>

  <%= form.label 'Favorite drink' %>: 
  <%= form.select :favorite_drink, ['Gin & Tonic', 'Manhattan', 'Beer'] %><br />
  <%= form.label 'Age' %><br />
  <%= form.number_field :age %><br />


  <%= form.submit %>
<% end %>

