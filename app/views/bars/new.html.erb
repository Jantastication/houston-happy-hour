<h1>Add a New Bar</h1>
<%= form_for @bar do |f| %>
  <%= f.label :name, 'Bar Name' %>:
  <%= f.text_field :name, :required => true %><br /><br />
  <%= f.label :address %>:
  <%= f.text_field :address, :required => true %><br /><br />
  <%= f.label :neighborhood %>:
  <%= f.select :neighborhood, ['Downtown', 'Galleria', 'Midtown', 'Montrose', 'Spring Branch'], :required => true %><br /><br />
  <%= f.label :phone_number %>:
  <%= f.text_field :phone_number, placeholder: 'xxx-xxx-xxxx', :required => true %><br /><br />
  <%= f.label :vibe %>:
  <%= f.select :vibe, ['Casual', 'Chill', 'Classy', 'Divey', 'Festive', 'Lit', 'Sports', 'Super Trendy', 'Trendy'], :required => true %><br /><br />
  <%= f.label :price_level, "Happy Hour Priciness" %>:
  <%= f.select :price_level, ['$', '$$', '$$$', '$$$$'], :required => true %><br /><br />
  <%= f.label :sake %>:
  <%= f.text_field :sake, placeholder: '$' %><br /><br />
  <%= f.label :beer %>:
  <%= f.text_field :beer, placeholder: '$' %><br /><br />
  <%= f.label :cocktail %>:
  <%= f.text_field :cocktail, placeholder: '$' %><br /><br />
  <%= f.label :wine_glass %>:
  <%= f.text_field :wine_glass, placeholder: '$' %><br /><br />
  <%= f.label :wine_bottle %>:
  <%= f.text_field :wine_bottle, placeholder: '$' %><br /><br />
  <%= f.label :beer_and_shot %>:
  <%= f.text_field :beer_and_shot, placeholder: '$' %><br /><br />
  <%= f.label :start_time %>:
  <%= f.text_field :start_time, placeholder: '5:00 PM' %><br /><br />
  <%= f.label :end_time %>:
  <%= f.text_field :end_time, placeholder: '6:30 PM' %><br /><br />
  <%= f.submit %>
<% end %>
